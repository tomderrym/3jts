      "path": "src/registry/new-york/blocks/marketing-ui/register/register-04/page.tsx",
      "content": "import Register from '@/components/shadcn-studio/blocks/register-04/register-04'\n\nconst RegisterPage = () => {\n  return <Register />\n}\n\nexport default RegisterPage\n",
