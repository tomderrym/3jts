{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "dashboard-dialog-17",
  "type": "registry:block",
  "description": "An employee details dialog with avatar display, calendar integration, form inputs, select dropdowns, popover elements, and scroll area for HR management.",
  "dependencies": [
    "lucide-react"
  ],
  "registryDependencies": [
    "avatar",
    "button",
    "calendar",
    "dialog",
    "input",
    "label",
    "popover",
    "scroll-area",
    "select",
    "separator",
    "utils"
  ],
  "files": [
    {
      "path": "src/registry/new-york/blocks/dashboard-and-application/dashboard-dialog/dashboard-dialog-17/page.tsx",
      "content": "import { Button } from '@/components/ui/button'\nimport EmployeeDetailsDialog from '@/components/shadcn-studio/blocks/dashboard-dialog-17/dialog-employee-details'\n\nconst DialogPage = () => {\n  return (\n    <div className='flex h-dvh items-start justify-center p-8'>\n      <EmployeeDetailsDialog\n        defaultOpen\n        trigger={\n          <Button variant='outline'>\n            <span>Edit</span>\n          </Button>\n        }\n      />\n    </div>\n  )\n}\n\nexport default DialogPage\n",
      "type": "registry:page",
      "target": "app/dashboard-dialog-17/page.tsx"
    },
    {
      "path": "src/registry/new-york/components/blocks/dashboard-dialog-17/dialog-employee-details.tsx",
      "content": "'use client'\n\nimport { useState, type ReactNode } from 'react'\n\nimport { ChevronDownIcon } from 'lucide-react'\n\nimport { Avatar, AvatarFallback, AvatarImage } from '@/components/ui/avatar'\nimport { Button } from '@/components/ui/button'\nimport { Calendar } from '@/components/ui/calendar'\nimport {\n  Dialog,\n  DialogClose,\n  DialogContent,\n  DialogFooter,\n  DialogHeader,\n  DialogTitle,\n  DialogTrigger\n} from '@/components/ui/dialog'\nimport { Input } from '@/components/ui/input'\nimport { Label } from '@/components/ui/label'\nimport { Popover, PopoverContent, PopoverTrigger } from '@/components/ui/popover'\nimport { ScrollArea } from '@/components/ui/scroll-area'\nimport {\n  Select,\n  SelectContent,\n  SelectGroup,\n  SelectItem,\n  SelectTrigger,\n  SelectValue\n} from '@/components/ui/select'\nimport { Separator } from '@/components/ui/separator'\n\nimport { cn } from '@/lib/utils'\n\ntype Props = {\n  trigger: ReactNode\n  defaultOpen?: boolean\n  className?: string\n}\n\nconst EmployeeDetailsDialog = ({ defaultOpen = false, trigger, className }: Props) => {\n  const [open, setOpen] = useState(defaultOpen)\n  const [datePopoverOpen, setDatePopoverOpen] = useState(false)\n  const [date, setDate] = useState<Date | undefined>(new Date())\n\n  return (\n    <Dialog open={open} onOpenChange={setOpen}>\n      <DialogTrigger asChild onClick={() => setOpen(true)}>\n        {trigger}\n      </DialogTrigger>\n      <DialogContent\n        className={cn(\n          'flex flex-col gap-0 p-0 max-sm:max-h-[min(650px,80vh)] sm:max-w-145 [&>[data-slot=dialog-close]>svg]:size-5',\n          className\n        )}\n      >\n        <ScrollArea className='flex max-h-full flex-col overflow-hidden'>\n          <div className='flex flex-col gap-4 p-6'>\n            <DialogHeader>\n              <DialogTitle className='leading-7'>Edit employee details</DialogTitle>\n            </DialogHeader>\n\n            <div className='flex items-center gap-6'>\n              <Avatar className='size-25 shrink-0 rounded-lg'>\n                <AvatarImage\n                  src='https://cdn.shadcnstudio.com/ss-assets/avatar/avatar-1.png'\n                  alt='john doe'\n                  className='rounded-lg'\n                />\n                <AvatarFallback className='text-xs'>JD</AvatarFallback>\n              </Avatar>\n\n              <div className='grid flex-1 grid-cols-2 gap-4'>\n                <Input type='text' placeholder='Employee name' defaultValue='John Doe' />\n                <Input type='text' placeholder='Designation' defaultValue='Software Engineer' />\n                <Input\n                  type='email'\n                  placeholder='employee@mail.com'\n                  className='col-span-2'\n                  defaultValue='employee@mail.com'\n                />\n              </div>\n            </div>\n\n            <div className='grid grid-cols-2 gap-4'>\n              <div className='space-y-1'>\n                <Label htmlFor='division'>Division</Label>\n                <Input id='division' type='text' placeholder='e.g. Sales' defaultValue='IT' />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='gender'>Gender</Label>\n                <Select defaultValue='male'>\n                  <SelectTrigger id='gender' className='w-full'>\n                    <SelectValue placeholder='Select a gender' />\n                  </SelectTrigger>\n                  <SelectContent>\n                    <SelectGroup>\n                      <SelectItem value='male'>Male</SelectItem>\n                      <SelectItem value='female'>Female</SelectItem>\n                      <SelectItem value='other'>Other</SelectItem>\n                    </SelectGroup>\n                  </SelectContent>\n                </Select>\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='age'>Age</Label>\n                <Input id='age' type='number' placeholder='e.g. 30' defaultValue={30} />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='city'>City</Label>\n                <Input id='city' type='text' placeholder='e.g. New York' defaultValue='New York' />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='emp-id'>Employee ID</Label>\n                <Input\n                  id='emp-id'\n                  type='text'\n                  placeholder='e.g. EMP-254875269-54214'\n                  defaultValue='EMP-254875269-54214'\n                />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='address'>Address</Label>\n                <Input\n                  id='address'\n                  type='text'\n                  placeholder='e.g. 123 Main St, City, Country'\n                  defaultValue='123 Main St, City, Country'\n                />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='phone'>Phone Number</Label>\n                <Input id='phone' type='tel' maxLength={10} placeholder='e.g. 9868666480' defaultValue='9868666480' />\n              </div>\n\n              <div className='space-y-1'>\n                <Label htmlFor='joining-date' className='px-1'>\n                  Joining Date\n                </Label>\n                <Popover open={datePopoverOpen} onOpenChange={setDatePopoverOpen}>\n                  <PopoverTrigger asChild>\n                    <Button variant='outline' id='joining-date' className='w-full justify-between font-normal'>\n                      {date ? date.toLocaleDateString() : <span className='text-muted-foreground'>Joining date</span>}\n                      <ChevronDownIcon />\n                    </Button>\n                  </PopoverTrigger>\n                  <PopoverContent className='w-auto overflow-hidden p-0' align='start'>\n                    <Calendar\n                      mode='single'\n                      selected={date}\n                      onSelect={date => {\n                        setDate(date)\n                        setDatePopoverOpen(false)\n                      }}\n                    />\n                  </PopoverContent>\n                </Popover>\n              </div>\n            </div>\n\n            <Separator />\n\n            <DialogFooter className='flex-row !justify-between gap-4'>\n              <DialogClose asChild>\n                <Button size='lg' variant='outline'>\n                  Cancel\n                </Button>\n              </DialogClose>\n              <Button size='lg'>Save details</Button>\n            </DialogFooter>\n          </div>\n        </ScrollArea>\n      </DialogContent>\n    </Dialog>\n  )\n}\n\nexport default EmployeeDetailsDialog\n",
      "type": "registry:component",
      "target": "components/shadcn-studio/blocks/dashboard-dialog-17/dialog-employee-details.tsx"
    }
  ]
}