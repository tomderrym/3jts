{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "checkout-page-03",
  "type": "registry:block",
  "description": "Multi-section checkout with accordion for personal details, shipping address, and payment info forms, shopping cart card with item list, and coupon code input",
  "registryDependencies": [
    "accordion",
    "button",
    "card",
    "checkbox",
    "input",
    "separator",
    "label",
    "select"
  ],
  "files": [
    {
      "path": "src/registry/new-york/blocks/ecommerce/checkout-page/checkout-page-03/page.tsx",
      "content": "import Checkout from '@/components/shadcn-studio/blocks/checkout-page-03/checkout-page-03'\n\nconst cartItems = [\n  {\n    id: 1,\n    name: 'Red cap',\n    description: 'Red and white cap',\n    price: 36.0,\n    image: 'https://cdn.shadcnstudio.com/ss-assets/blocks/ecommerce/checkout/image-10.png'\n  },\n  {\n    id: 2,\n    name: 'Oversized T-shirt',\n    description: 'Awesome white T-shirt',\n    price: 29.0,\n    image: 'https://cdn.shadcnstudio.com/ss-assets/blocks/ecommerce/checkout/image-9.png'\n  },\n  {\n    id: 3,\n    name: 'Girl brown T-shirt',\n    description: \"it's a nice brown t-shirt\",\n    price: 30.0,\n    image: 'https://cdn.shadcnstudio.com/ss-assets/blocks/ecommerce/checkout/image-8.png'\n  }\n]\n\nconst CheckoutPage = () => {\n  return <Checkout cartItems={cartItems} />\n}\n\nexport default CheckoutPage\n",
      "type": "registry:page",
      "target": "app/checkout-page-03/page.tsx"
    },
    {
      "path": "src/registry/new-york/components/blocks/checkout-page-03/checkout-page-03.tsx",
      "content": "'use client'\n\nimport { useState } from 'react'\n\nimport { Accordion, AccordionContent, AccordionItem, AccordionTrigger } from '@/components/ui/accordion'\nimport { Button } from '@/components/ui/button'\nimport { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'\nimport { Input } from '@/components/ui/input'\nimport { Separator } from '@/components/ui/separator'\nimport PersonalDetails from '@/components/shadcn-studio/blocks/checkout-page-03/PersonalDetails'\nimport ShippingAdress from '@/components/shadcn-studio/blocks/checkout-page-03/ShippingAddress'\nimport PaymentInfo from '@/components/shadcn-studio/blocks/checkout-page-03/PaymentInfo'\n\ntype CartItem = {\n  id: number\n  name: string\n  description: string\n  price: number\n  image: string\n}[]\n\nconst Checkout = ({ cartItems }: { cartItems: CartItem }) => {\n  const [activeAccordionItem, setActiveAccordionItem] = useState<string>('item-1')\n\n  const AccordionItems = [\n    {\n      title: 'Your Personal Details',\n      content: <PersonalDetails setActiveAccordionItem={setActiveAccordionItem} />\n    },\n    {\n      title: 'Shipping Address',\n      content: <ShippingAdress setActiveAccordionItem={setActiveAccordionItem} />\n    },\n    {\n      title: 'Payment Info',\n      content: <PaymentInfo />\n    }\n  ]\n\n  const subtotal = cartItems.reduce((sum, item) => sum + item.price, 0)\n  const shippingCost = 10.66\n  const discount = 9.0\n  const total = subtotal + shippingCost - discount\n\n  return (\n    <section className='bg-muted py-8 sm:py-16 lg:py-24'>\n      <div className='mx-auto max-w-7xl px-4 sm:px-6 lg:px-8'>\n        <div className='grid grid-cols-1 gap-6 md:grid-cols-4 lg:grid-cols-5'>\n          <div className='space-y-6 md:col-span-2 lg:col-span-2'>\n            {/* Coupon Code */}\n            <Card className='shadow-none'>\n              <CardHeader className='border-b'>\n                <CardTitle className='text-xl'>Coupon Code</CardTitle>\n                <CardDescription className='text-base'>Enter code to get discount instantly</CardDescription>\n              </CardHeader>\n              <CardContent className='flex gap-3'>\n                <Input type='text' placeholder='Add discount code' />\n                <Button>Apply</Button>\n              </CardContent>\n            </Card>\n\n            {/* Shopping Cart */}\n            <Card className='shadow-none'>\n              <CardHeader className='border-b'>\n                <CardTitle className='text-xl'>Shopping Cart</CardTitle>\n                <CardDescription className='text-base'>You have {cartItems.length} items in your cart</CardDescription>\n              </CardHeader>\n              <CardContent className='space-y-6 px-0'>\n                <div className='flex flex-col gap-9'>\n                  {cartItems.map(item => (\n                    <div key={item.id} className='flex justify-between gap-4 px-6 max-sm:flex-col sm:items-center'>\n                      <div className='flex h-full items-center gap-4'>\n                        <img src={item.image} alt={item.name} className='size-14.5 rounded-sm object-cover' />\n                        <div className='flex flex-col gap-1'>\n                          <p className='font-medium'>{item.name}</p>\n                          <p className='text-muted-foreground'>{item.description}</p>\n                        </div>\n                      </div>\n                      <div className='sm:text-end'>\n                        <span className='text-lg font-semibold'>${item.price.toFixed(2)}</span>\n                      </div>\n                    </div>\n                  ))}\n                </div>\n\n                <Separator />\n\n                <div className='space-y-3.5 px-6'>\n                  <div className='flex items-center justify-between gap-3'>\n                    <span className='text-lg'>Subtotal</span>\n                    <span className='text-lg font-medium'>${subtotal.toFixed(2)}</span>\n                  </div>\n                  <div className='flex items-center justify-between gap-3'>\n                    <span className='text-lg'>Shipping Cost (+)</span>\n                    <span className='text-lg font-medium'>${shippingCost.toFixed(2)}</span>\n                  </div>\n                  <div className='mb-6 flex items-center justify-between gap-3'>\n                    <span className='text-lg'>Discount (-)</span>\n                    <span className='text-lg font-medium'>${discount.toFixed(2)}</span>\n                  </div>\n                </div>\n\n                <Separator className='mb-6' />\n\n                <div className='space-y-6 px-6'>\n                  <div className='flex items-center justify-between gap-3'>\n                    <span className='text-lg font-medium'>Total Payable</span>\n                    <span className='text-lg font-semibold'>${total.toFixed(2)}</span>\n                  </div>\n                  <Button className='w-full' size='lg'>\n                    Place Order\n                  </Button>\n                  <p className='text-muted-foreground'>\n                    By placing your order, you agree to our company{' '}\n                    <a href='#' className='text-card-foreground font-semibold hover:underline'>\n                      Privacy Policy\n                    </a>{' '}\n                    and{' '}\n                    <a href='#' className='text-card-foreground font-semibold hover:underline'>\n                      Conditions of use\n                    </a>\n                    .\n                  </p>\n                </div>\n              </CardContent>\n            </Card>\n          </div>\n\n          {/* Order Summary */}\n          <div className='md:col-span-2 lg:col-span-3'>\n            <Card className='shadow-none'>\n              <CardContent>\n                <Accordion type='single' collapsible className='w-full space-y-2' value={activeAccordionItem}>\n                  {AccordionItems.map((item, index) => (\n                    <AccordionItem key={index} value={`item-${index + 1}`} className='rounded-md border!'>\n                      <AccordionTrigger className='px-5'>{item.title}</AccordionTrigger>\n                      <AccordionContent className='px-5'>{item.content}</AccordionContent>\n                    </AccordionItem>\n                  ))}\n                </Accordion>\n              </CardContent>\n            </Card>\n          </div>\n        </div>\n      </div>\n    </section>\n  )\n}\n\nexport default Checkout\n",
      "type": "registry:component",
      "target": "components/shadcn-studio/blocks/checkout-page-03/checkout-page-03.tsx"
    },
    {
      "path": "src/registry/new-york/components/blocks/checkout-page-03/PaymentInfo.tsx",
      "content": "import { Button } from '@/components/ui/button'\nimport { Input } from '@/components/ui/input'\nimport { Label } from '@/components/ui/label'\n\nconst PaymentInfo = () => {\n  return (\n    <form>\n      <p className='text-muted-foreground mb-6'>Add a new payment method</p>\n      <div className='grid grid-cols-1 gap-6 sm:max-md:grid-cols-2 lg:grid-cols-2'>\n        <div className='space-y-3.5'>\n          <Label htmlFor='card-holder-name'>Full name*</Label>\n          <Input type='text' placeholder='John Doe' id='card-holder-name' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='card-number'>Card Number*</Label>\n          <Input type='text' placeholder='xxxx xxxx xxxx xxxx' id='card-number' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='card-expiration'>Card expiration*</Label>\n          <Input type='text' placeholder='MM/YY' id='card-expiration' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='card-cvv'>CVV*</Label>\n          <Input type='text' placeholder='***' id='card-cvv' required />\n        </div>\n      </div>\n\n      <div className='mt-6 space-y-6'>\n        <Button type='submit' size='lg' className='w-full'>\n          Pay Now\n        </Button>\n\n        <div className='text-muted-foreground'>\n          Payment processed by{' '}\n          <a href='#' className='text-primary hover:underline'>\n            Paddle\n          </a>{' '}\n          for{' '}\n          <a href='#' className='text-primary hover:underline'>\n            ShadcnStudio\n          </a>{' '}\n          - United States Of America\n        </div>\n      </div>\n    </form>\n  )\n}\n\nexport default PaymentInfo\n",
      "type": "registry:component",
      "target": "components/shadcn-studio/blocks/checkout-page-03/PaymentInfo.tsx"
    },
    {
      "path": "src/registry/new-york/components/blocks/checkout-page-03/PersonalDetails.tsx",
      "content": "import { Button } from '@/components/ui/button'\nimport { Input } from '@/components/ui/input'\nimport { Label } from '@/components/ui/label'\nimport { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select'\n\nconst PersonalDetails = ({ setActiveAccordionItem }: { setActiveAccordionItem: (value: string) => void }) => {\n  return (\n    <form>\n      <div className='grid grid-cols-1 gap-x-5 gap-y-6 sm:max-md:grid-cols-2 lg:grid-cols-2'>\n        <div className='space-y-3.5'>\n          <Label htmlFor='firstName'>First Name</Label>\n          <Input type='text' placeholder='First Name' id='firstName' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='lastName'>Last Name</Label>\n          <Input type='text' placeholder='Last Name' id='lastName' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='email'>Email Address</Label>\n          <Input type='email' placeholder='Email address' id='email' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='phone'>Phone</Label>\n          <Input type='tel' placeholder='Phone' id='phone' required />\n        </div>\n\n        <div className='space-y-3.5 sm:max-md:col-span-2 lg:col-span-2'>\n          <Label htmlFor='address'>Mailing Address</Label>\n          <Input type='text' placeholder='Mailing Address' id='address' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='city'>City</Label>\n          <Input type='text' placeholder='City' id='city' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='postCode'>Post Code</Label>\n          <Input type='text' placeholder='Post Code' id='postCode' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='country'>Country</Label>\n          <Input type='text' placeholder='Country' id='country' required />\n        </div>\n\n        <div>\n          <Label htmlFor='region' className='mb-3.5'>\n            Region/State\n          </Label>\n          <Select>\n            <SelectTrigger className='w-full'>\n              <SelectValue placeholder='Select a state' />\n            </SelectTrigger>\n            <SelectContent>\n              <SelectItem value='california'>California</SelectItem>\n              <SelectItem value='new-york'>New York</SelectItem>\n              <SelectItem value='texas'>Texas</SelectItem>\n              <SelectItem value='florida'>Florida</SelectItem>\n              <SelectItem value='illinois'>Illinois</SelectItem>\n            </SelectContent>\n          </Select>\n        </div>\n\n        <div>\n          <Button type='submit' onClick={() => setActiveAccordionItem('item-2')}>\n            Next Step\n          </Button>\n        </div>\n      </div>\n    </form>\n  )\n}\n\nexport default PersonalDetails\n",
      "type": "registry:component",
      "target": "components/shadcn-studio/blocks/checkout-page-03/PersonalDetails.tsx"
    },
    {
      "path": "src/registry/new-york/components/blocks/checkout-page-03/ShippingAddress.tsx",
      "content": "import { Button } from '@/components/ui/button'\nimport { Checkbox } from '@/components/ui/checkbox'\nimport { Input } from '@/components/ui/input'\nimport { Label } from '@/components/ui/label'\nimport { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select'\n\nconst ShippingAdress = ({ setActiveAccordionItem }: { setActiveAccordionItem: (value: string) => void }) => {\n  return (\n    <form>\n      <div className='grid grid-cols-1 gap-x-5 gap-y-6 sm:max-md:grid-cols-2 lg:grid-cols-2'>\n        <div className='col-span-full flex items-center gap-3'>\n          <Checkbox id='same-as-billing-address' className='size-6' />\n          <Label htmlFor='same-as-billing-address'>Shipping address is the same as my billing address</Label>\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='firstNameShipping'>First Name</Label>\n          <Input type='text' placeholder='First Name' id='firstNameShipping' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='lastNameShipping'>Last Name</Label>\n          <Input type='text' placeholder='Last Name' id='lastNameShipping' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='addressLine1'>Address Line 1</Label>\n          <Input type='text' placeholder='Address Line 1' id='addressLine1' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='addressLine2'>Address Line 2</Label>\n          <Input type='text' placeholder='Address Line 2' id='addressLine2' required />\n        </div>\n\n        <div>\n          <Label htmlFor='addressType' className='mb-3.5'>\n            Address Type\n          </Label>\n          <Select>\n            <SelectTrigger className='w-full'>\n              <SelectValue placeholder='Select address type' />\n            </SelectTrigger>\n            <SelectContent>\n              <SelectItem value='house'>House</SelectItem>\n              <SelectItem value='apartment'>Apartment</SelectItem>\n              <SelectItem value='office'>Office</SelectItem>\n              <SelectItem value='other'>Other</SelectItem>\n            </SelectContent>\n          </Select>\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='zipCode'>Zip</Label>\n          <Input type='text' placeholder='Zip Code' id='zipCode' required />\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='city2'>City</Label>\n          <Input type='text' placeholder='City' id='city2' required />\n        </div>\n\n        <div>\n          <Label htmlFor='state' className='mb-3.5'>\n            State\n          </Label>\n          <Select>\n            <SelectTrigger className='w-full'>\n              <SelectValue placeholder='Select a state' />\n            </SelectTrigger>\n            <SelectContent>\n              <SelectItem value='california'>California</SelectItem>\n              <SelectItem value='new-york'>New York</SelectItem>\n              <SelectItem value='texas'>Texas</SelectItem>\n              <SelectItem value='florida'>Florida</SelectItem>\n              <SelectItem value='illinois'>Illinois</SelectItem>\n            </SelectContent>\n          </Select>\n        </div>\n\n        <div className='space-y-3.5'>\n          <Label htmlFor='mobilePhone'>Mobile Phone</Label>\n          <Input type='tel' placeholder='Mobile Phone' id='mobilePhone' required />\n        </div>\n      </div>\n\n      <div className='mt-6'>\n        <Button type='submit' onClick={() => setActiveAccordionItem('item-3')}>\n          Next Step\n        </Button>\n      </div>\n    </form>\n  )\n}\n\nexport default ShippingAdress\n",
      "type": "registry:component",
      "target": "components/shadcn-studio/blocks/checkout-page-03/ShippingAddress.tsx"
    }
  ]
}